{
  "name": "nostr-battle-room",
  "version": "0.1.0",
  "description": "Nostr-based real-time battle room for multiplayer games",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./testing": {
      "import": "./dist/testing/index.js",
      "types": "./dist/testing/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "nostr",
    "multiplayer",
    "game",
    "battle",
    "matchmaking",
    "p2p",
    "realtime"
  ],
  "author": "kako-jun",
  "license": "MIT",
  "peerDependencies": {
    "nostr-tools": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "ws": "^8.0.0",
    "https-proxy-agent": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "ws": {
      "optional": true
    },
    "https-proxy-agent": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "~5.6.2",
    "@types/react": "^19.0.0",
    "@types/ws": "^8.5.0",
    "ws": "^8.18.0",
    "https-proxy-agent": "^7.0.0",
    "vitest": "^2.0.0",
    "nostr-tools": "^2.10.0"
  }
}
